<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head', {webtitle: "Productos" }) %>
</head>
<%- include('./partials/header') %>
<body>
    <div class="container-btn-new">
        <a class="btnNew" href="/">
            <input type="button" value="HOME">
        </a>
        <a class="btnNew" href="/products/addProduct">
        <input type="button" value="Agregar producto">
        </a>
        <a class="btnNew" href="/">
            <input type="button" value="Cerrar sesión">
        </a>
    </div>
    <div class="container-edit-products">
    <table class="tableProducts">
        <thead class="head-editProduct">
        <tr>
            <th>ID</th>
            <th>DESCRIPCIÓN</th>
            <th>NOMBRE</th>
            <th>PRECIO</th>
            <th>ACCIONES</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i=0; i < Products.length; i++){ %>
        <form method="POST" action="/products/delete/<%= Products[i].id %>?_method=DELETE">
            <tr>
            <td data-label="ID">
                <%= Products[i].id %>
            </td>
            <td data-label="NOMBRE DEL PRODUCTO">
                <%= Products[i].name %>
            </td>
            <td data-label="DESCRIPCIÓN">
                <%= Products[i].description %>
            </td>
            <td data-label="PRECIO">
                <%= Products[i].price %>
            </td>
            <td data-label="ACCIONES">
                <div class="btnEdit">
                <a href="/products/editProduct/<%= Products[i].id %>">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                </div>
                <button type="submit" class="btnDelete" onclick="confirm('¿Está seguro que desea eliminar el registro?')">
                <i class="fa-solid fa-trash-can"></i>
                </button>
            </td>
            </tr>
        </form>
        <% } %>
        </tbody>
    </table>
    </div>    
</body>
</html>